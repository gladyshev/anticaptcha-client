{
  "name": "gladyshev/anticaptcha-client",
  "description": "Full featured anti-captcha.com client library.",
  "keywords": ["anti", "captcha", "anticaptcha", "anti-captcha", "anti-captcha.com", "anti-gate", "antigate"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Dmitry Gladyshev",
      "email": "gladyshevd@icloud.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "psr/http-client": "~1.0",
    "psr/http-message": "~1.0",
    "guzzlehttp/psr7": "~2.1.0"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "~7.4",
    "phpunit/phpunit": "~9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "overtrue/phplint": "^4.1",
    "dg/bypass-finals": "^1.3"
  },
  "autoload" : {
    "psr-4": {
      "Anticaptcha\\": "src/"
    }
  },
  "autoload-dev" : {
    "psr-4": {
      "Anticaptcha\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "lint": "phplint",
    "psalm": "psalm --config=psalm.xml",
    "test": "phpunit --colors=always",
    "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-clover ./var/phpunit/coverage.xml"
  }
}
